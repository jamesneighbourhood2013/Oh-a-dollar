-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "SimpleMenu"
screenGui.ResetOnSpawn = false
screenGui.Parent = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")

-- Create Frame (Menu container)
local menuFrame = Instance.new("Frame")
menuFrame.Name = "MenuFrame"
menuFrame.Size = UDim2.new(0, 230, 0, 340)
menuFrame.Position = UDim2.new(0, 15, 0, 15)
menuFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
menuFrame.BorderSizePixel = 0
menuFrame.Active = true
menuFrame.Draggable = true
menuFrame.Parent = screenGui

-- Rounded corners
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 8)
corner.Parent = menuFrame

-- Tab Buttons Container
local tabContainer = Instance.new("Frame")
tabContainer.Name = "TabContainer"
tabContainer.Size = UDim2.new(1, 0, 0, 40)
tabContainer.BackgroundTransparency = 1
tabContainer.Parent = menuFrame

-- Tab Buttons Layout
local tabLayout = Instance.new("UIListLayout")
tabLayout.FillDirection = Enum.FillDirection.Horizontal
tabLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
tabLayout.SortOrder = Enum.SortOrder.LayoutOrder
tabLayout.Padding = UDim.new(0, 5)
tabLayout.Parent = tabContainer

-- Create Button Panel
local buttonPanel = Instance.new("Frame")
buttonPanel.Name = "ButtonPanel"
buttonPanel.Size = UDim2.new(1, 0, 1, -50)
buttonPanel.Position = UDim2.new(0, 0, 0, 45)
buttonPanel.BackgroundTransparency = 1
buttonPanel.Parent = menuFrame

-- Function to create tab buttons
local tabs = {}
local currentTab = nil

local function switchTab(tabName)
	for name, container in pairs(tabs) do
		container.Visible = (name == tabName)
	end
	currentTab = tabName
end

local function createTab(name)
	local button = Instance.new("TextButton")
	button.Name = name .. "Tab"
	button.Size = UDim2.new(0, 60, 1, 0)
	button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
	button.TextColor3 = Color3.new(1, 1, 1)
	button.Font = Enum.Font.SourceSansBold
	button.TextSize = 16
	button.Text = name
	button.Parent = tabContainer

	local tabCorner = Instance.new("UICorner")
	tabCorner.CornerRadius = UDim.new(0, 6)
	tabCorner.Parent = button

	local container = Instance.new("Frame")
	container.Name = name .. "Container"
	container.Size = UDim2.new(1, 0, 1, 0)
	container.BackgroundTransparency = 1
	container.Visible = false
	container.Parent = buttonPanel

	local layout = Instance.new("UIListLayout")
	layout.Padding = UDim.new(0, 5)
	layout.FillDirection = Enum.FillDirection.Vertical
	layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
	layout.VerticalAlignment = Enum.VerticalAlignment.Top
	layout.SortOrder = Enum.SortOrder.LayoutOrder
	layout.Parent = container

	tabs[name] = container

	button.MouseButton1Click:Connect(function()
		switchTab(name)
	end)

	return container
end

-- Button creation helper
local function createButton(parent, name, text, onClick)
	local button = Instance.new("TextButton")
	button.Name = name
	button.Size = UDim2.new(0, 180, 0, 40)
	button.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
	button.TextColor3 = Color3.new(1, 1, 1)
	button.Font = Enum.Font.SourceSans
	button.TextSize = 20
	button.Text = text
	button.Parent = parent

	local btnCorner = Instance.new("UICorner")
	btnCorner.CornerRadius = UDim.new(0, 6)
	btnCorner.Parent = button

	button.MouseButton1Click:Connect(onClick)
end

-- === Create Tabs ===
local dupeTab = createTab("Dupe")
local mainTab = createTab("Main")
local miscTab = createTab("Misc")

-- === Dupe Buttons ===
createButton(dupeTab, "DupeButton1", "Wipe Potion Dupe", function()
	print("Button 1 clicked")
	local args = {
		[1] = "HUD",
		[2] = "Inventory",
		[3] = "Drop",
		[4] = "Wipe Potion",
		[5] = -1/0
	}
	game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("Sync"):InvokeServer(unpack(args))
end)

